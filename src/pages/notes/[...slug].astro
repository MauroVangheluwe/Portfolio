---
import { getCollection, render } from "astro:content";
import type { CollectionEntry } from "astro:content";
import MarkdownNoteLayout from "../../layouts/MarkdownNoteLayout.astro";

export async function getStaticPaths() {
  const notes: CollectionEntry<"notes">[] = await getCollection("notes");
  return notes.map((note) => ({
    params: { slug: note.id },
    props: { note },
  }));
}

const { note } = Astro.props as { note: CollectionEntry<"notes"> };

const { Content } = await render(note);
---

<MarkdownNoteLayout frontmatter={note.data} backLink="/notes">
  <Content />
</MarkdownNoteLayout>
